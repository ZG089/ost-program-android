            <TextView
                android:id="@+id/about_phone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?actionMenuTextColor"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <dev.oneuiproject.oneui.widget.RoundedNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <dev.oneuiproject.oneui.widget.RoundedLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/oui_background_color"
                android:orientation="vertical">

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/android_version"
                    app:showTopDivider="false"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/brand"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/board"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/model"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_codename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/codename"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_build_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/build_number"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_sdk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/software_development_kit"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/device_type"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_ram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/ram"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_rom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/rom"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_fingerprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/build_fingerprint"
                    app:showTopDivider="true"/>

                <dev.oneuiproject.oneui.widget.CardItemView
                    android:id="@+id/about_phone_fingerprint_scanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/fingerprint_support"
                    app:showTopDivider="true"/>

            </dev.oneuiproject.oneui.widget.RoundedLinearLayout>

        </dev.oneuiproject.oneui.widget.RoundedNestedScrollView>

    </LinearLayout>

