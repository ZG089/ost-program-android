<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.widget.RoundedNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="always"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:roundedCorners="top_left|top_right">

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer" />

        <dev.oneuiproject.oneui.widget.RoundedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_ost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:icon="@drawable/samsung_contact"
                app:title="@string/operating_system_tester"
                app:showTopDivider="false"/>

        </dev.oneuiproject.oneui.widget.RoundedLinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_ui_design_developers" />

        <dev.oneuiproject.oneui.widget.RoundedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_dev_yann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/samsung_contact"
                app:title="Yanndroid"
                app:showTopDivider="false"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_dev_salvo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/samsung_contact"
                app:title="Salvo Giangreco"
                app:showTopDivider="true" />

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_dev_tribalfs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/samsung_contact"
                app:title="Tribalfs"
                app:showTopDivider="true" />

        </dev.oneuiproject.oneui.widget.RoundedLinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.oneuiproject.oneui.widget.RoundedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_osp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/open_source_program"
                app:summary="@string/open_source_code_of_this_program"
                app:showTopDivider="false"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/credits"
                app:showTopDivider="true"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/about_bottom_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/one_ui_design_lib"
                app:showTopDivider="true"/>

        </dev.oneuiproject.oneui.widget.RoundedLinearLayout>

    </LinearLayout>

</dev.oneuiproject.oneui.widget.RoundedNestedScrollView>