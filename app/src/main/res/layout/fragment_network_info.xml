<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.phoneinfo.NetworkInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/network_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_oui_wifi_no_connection"
                app:tint="?actionMenuTextColor"/>

            <TextView
                android:id="@+id/network_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?actionMenuTextColor"/>

        </LinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/network_operator_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/operator_country"
                app:showTopDivider="false"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/network_phone_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/phone_type"
                app:showTopDivider="true"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/network_connectivity_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/network_connectivity_status"
                app:showTopDivider="true"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/network_vpn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="VPN"
                app:showTopDivider="true"/>

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/check_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/check_permission"
                app:showTopDivider="false"/>

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>