<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.widget.RoundedFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.phoneinfo.DisplayInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/display_screen_resolution_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_oui_screen_resolution"
                app:tint="?actionMenuTextColor"/>

            <TextView
                android:id="@+id/display_screen_resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="?actionMenuTextColor"
                android:textStyle="bold"/>

        </LinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <dev.oneuiproject.oneui.widget.RoundedNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <dev.oneuiproject.oneui.widget.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/oui_background_color"
                    android:orientation="vertical">

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/display_screen_diagonal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/screen_diagonal"
                        app:showTopDivider="false"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/display_refresh_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/refresh_rate"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/display_dpi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/dpi_dots_per_inch"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/display_screen_orientation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/orientation"
                        app:showTopDivider="true"/>

                </dev.oneuiproject.oneui.widget.RoundLinearLayout>

                <dev.oneuiproject.oneui.widget.Separator
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <dev.oneuiproject.oneui.widget.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/oui_background_color"
                    android:orientation="vertical">

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/check_dead_pixels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/check_for_dead_pixels"
                        app:showTopDivider="false"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/fix_dead_pixels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/fix_dead_pixels"
                        app:summary="@string/fix_dead_pixels_w"
                        app:showTopDivider="true" />

                </dev.oneuiproject.oneui.widget.RoundLinearLayout>

            </LinearLayout>

        </dev.oneuiproject.oneui.widget.RoundedNestedScrollView>

    </LinearLayout>

</dev.oneuiproject.oneui.widget.RoundedFrameLayout>