<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.PowerMenuFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/power_menu_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_oui_power"
                app:tint="?actionMenuTextColor"/>

            <TextView
                android:id="@+id/power_menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?actionMenuTextColor"
                android:textAlignment="center"
                android:text="@string/access_request_sent"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/power_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_oui_power"
                app:title="@string/turn_off"
                app:summary="@string/turn_off_s"
                app:showTopDivider="false"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/reboot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_oui_restart"
                app:title="@string/reboot"
                app:summary="@string/reboot_system_s"
                app:showTopDivider="true"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/recovery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_oui_lightning"
                app:title="@string/reboot_recovery"
                app:summary="@string/reboot_recovery_s"
                app:showTopDivider="true"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/download_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_oui_download_circle_filled"
                app:title="@string/reboot_download"
                app:summary="@string/reboot_download_s"
                app:showTopDivider="true"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/fastboot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_oui_restart"
                app:title="@string/reboot_fastboot"
                app:summary="@string/reboot_fastboot_s"
                app:showTopDivider="true"/>

            <dev.oneuiproject.oneui.widget.CardItemView
                android:id="@+id/fastbootd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_oui_restart"
                app:title="@string/reboot_fastbootd"
                app:summary="@string/reboot_fastbootd_s"
                app:showTopDivider="true"/>

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>