<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.widget.RoundedFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.phoneinfo.CameraInfoFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingHorizontal="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_oui_camera_outline"
                app:tint="?actionMenuTextColor"/>

            <TextView
                android:id="@+id/camera_modules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?actionMenuTextColor"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rear_facing_camera"/>

        <dev.oneuiproject.oneui.widget.RoundedNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <dev.oneuiproject.oneui.widget.RoundedLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/oui_background_color"
                    android:orientation="vertical">

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_resolution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/camera_resolution"
                        app:showTopDivider="false"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_focal_lenght"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/focal_lenght"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_stabilization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/stabilization_support"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_flash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/flash"
                        app:showTopDivider="true"/>

                </dev.oneuiproject.oneui.widget.RoundedLinearLayout>

                <dev.oneuiproject.oneui.widget.Separator
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rear_facing_camera_second"/>

                <dev.oneuiproject.oneui.widget.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/oui_background_color"
                    android:orientation="vertical">

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_second_resolution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/camera_resolution"
                        app:showTopDivider="false"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_second_focal_lenght"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/focal_lenght"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_second_stabilization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/stabilization_support"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_second_flash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/flash"
                        app:showTopDivider="true"/>

                </dev.oneuiproject.oneui.widget.RoundLinearLayout>

                <dev.oneuiproject.oneui.widget.Separator
                    android:id="@+id/third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rear_facing_camera_third"/>

                <dev.oneuiproject.oneui.widget.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/oui_background_color"
                    android:orientation="vertical">

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_third_resolution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/camera_resolution"
                        app:showTopDivider="false"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_third_focal_lenght"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/focal_lenght"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_third_stabilization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/stabilization_support"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_back_third_flash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/flash"
                        app:showTopDivider="true"/>

                </dev.oneuiproject.oneui.widget.RoundLinearLayout>

                <dev.oneuiproject.oneui.widget.Separator
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/front_camera"/>

                <dev.oneuiproject.oneui.widget.RoundedLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/oui_background_color"
                    android:orientation="vertical">

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_front_resolution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/camera_resolution"
                        app:showTopDivider="false"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_front_focal_lenght"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/focal_lenght"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_front_stabilization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/stabilization_support"
                        app:showTopDivider="true"/>

                    <dev.oneuiproject.oneui.widget.CardItemView
                        android:id="@+id/camera_front_flash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/flash"
                        app:showTopDivider="true"/>

                </dev.oneuiproject.oneui.widget.RoundedLinearLayout>

            </LinearLayout>

        </dev.oneuiproject.oneui.widget.RoundedNestedScrollView>

    </LinearLayout>

</dev.oneuiproject.oneui.widget.RoundedFrameLayout>